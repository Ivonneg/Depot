<!DOCTYPE html>
<html>
  <head>
    <title>Depot IG</title>
    
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body class="w3-container">

    <div class="w3-bar w3-text-white w3-blue-gray">
      <a href="/" class="w3-bar-item w3-button">Depot Shop</a>
      <a href="/products" class="w3-bar-item w3-button w3-hide-small">Products</a>
      <a href="/static_pages/about" class="w3-bar-item w3-button w3-hide-small">About</a>
      <a href="/static_pages/help" class="w3-bar-item w3-button w3-hide-small">Help</a>
      <%= link_to 'Login', login_path, method: :post, class:"w3-bar-item w3-button w3-border"  %>
      <% if session[:user_id] %>
      
      <%= link_to 'Orders', orders_path, class:"w3-bar-item w3-button w3-border" %>
      <%= link_to 'Products', products_path, class:"w3-bar-item w3-button w3-border"  %>
      <%= link_to 'Users', users_path, class:"w3-bar-item w3-button w3-border"  %>
          <a href="/carts" class="w3-bar-item w3-button w3-border">Carts</a>      
          <a href="/line_items" class="w3-bar-item w3-button w3-border">LineItems</a>    
      <%= link_to 'Logout', logout_path, method: :delete, class:"w3-bar-item w3-button w3-border"  %>
      <% end %>
      
      <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium" onclick="myFunction()">&#9776;</a>
    </div>
    
    <div id="dropDown" class="w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium">
      <a href="/" class="w3-bar-item w3-button">Home</a>
      <a href="/static_pages/help" class="w3-bar-item w3-button">Help</a>
      <a href="/static_pages/about" class="w3-bar-item w3-button">About</a>
      <a href="/products" class="w3-bar-item w3-button">Manage Products</a>
    </div>

   <div class="w3-container">
    <%= yield %>
   </div>    

    <script>
    function myFunction() {
        var x = document.getElementById("dropDown");
        if (x.className.indexOf("w3-show") == -1) {
            x.className += " w3-show";
        } else { 
            x.className = x.className.replace(" w3-show", "");
        }
    }
</script>
  </body>
</html>
